{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "indent": ["error", 4],
        "allowForLoopAfterthoughts": true,
        "class-methods-use-this": "off",
        "no-plusplus": "off",
        "prefer-template": "off",
        "no-restricted-globals": "off"
    }
}